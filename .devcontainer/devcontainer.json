{
	"name": "Django Academic Monitor",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "web",
	"workspaceFolder": "/app",
    "postCreateCommand": "pip install -r requirements.txt",
    
    // Adicione esta seção de features:
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	}
}